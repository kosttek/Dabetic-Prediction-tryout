<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/start_glucose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/start_glucose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"

            android:text="@string/start_glucose"
            android:textSize="13dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/start_glucose_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"

            android:gravity="left"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="30dp"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/glucose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/glucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/glucose"
            android:textSize="25dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/glucose_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"

            android:gravity="left"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="30dp"
             />
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/insulin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/insulin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/insulin"
            android:textSize="25dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/insulin_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="left"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="30dp" />
    </LinearLayout>

        <Button
            android:id="@+id/compute"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="compute" />

</LinearLayout>